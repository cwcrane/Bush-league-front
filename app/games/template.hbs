<h1>Games</h1>
<div class="table-responsive">
  <table class="table table-striped">

    <thead>
      <tr>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Home Goals</th>
        <th>Away Goals</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
    </thead>

    <tbody>
      {{#each model.games as |game|}}
      <tr>
        <td>{{#link-to 'rosters'}}{{game.home_team_id.name}}{{/link-to}}</td>
        <td>{{#link-to 'rosters'}}{{game.away_team_id.name}}{{/link-to}}</td>
        <td>{{game.home_goals}}</td>
        <td>{{game.away_goals}}</td>
        <td>{{game.date}}</td>
        <td>{{game.time}}</td>
      </tr>
      {{/each}}
    </tbody>

  </table>
</div>

<h2>{{#link-to 'rosters'}}roster{{/link-to}}</h2>

{{outlet}}