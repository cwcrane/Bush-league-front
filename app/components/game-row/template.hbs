{{#if isEditable}}

  <td><button class='btn btn-default1' {{action 'updateGame'}}>Submit</button></td>
  <td>{{#link-to 'rosters'}}{{game.home_team_id.name}}{{/link-to}}</td>
  <td>{{#link-to 'rosters'}}{{game.away_team_id.name}}{{/link-to}}</td>
  <td>{{input placeholder=game.home_goals valueBinding='game.home_goals'}}</td>
  <td>{{input placeholder=game.away_goals valueBinding='game.away_goals'}}</td>
  <td>{{game.date}}</td>
  <td>{{game.time}}</td>
  <td><button class='btn-default3'{{action 'destroyGame'}}>X</button></td>

{{else}}

	<td><button class='btn btn-default2'{{action 'toggleEditable'}}>edit</button></td>
  <td>{{#link-to 'teams' game.home_team_id}}{{game.home_team_id.name}}{{/link-to}}</td>
  <td>{{#link-to 'teams' game.away_team_id}}{{game.away_team_id.name}}{{/link-to}}</td>
  <td>{{game.home_goals}}</td>
  <td>{{game.away_goals}}</td>
  <td>{{game.date}}</td>
  <td>{{game.time}}</td>
  <td><button class='btn-default3'{{action 'destroyGame'}}>X</button></td>

{{/if}}

{{yield}}
